{
  "title": "Mission",
  "type": "object",
  "description": "This model describes the main file of a mission description named `{mission-slug}-{team}.json`. Each team is given its own version of the mission description",
  "x-examples": {},
  "properties": {
    "slug": {
      "type": "string",
      "description": "User-friendly and URL-valid name of the mission. [Learn more about the slug concept](https://en.wikipedia.org/wiki/Clean_URL#Slug)"
    },
    "version": {
      "type": "string",
      "description": "Mission description version"
    },
    "schema": {
      "type": "string",
      "description": "JSON schema URL"
    },
    "name": {
      "type": "string",
      "description": "Mission name"
    },
    "description": {
      "type": "string",
      "description": "Mission description"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Creation date/time in [ISO-8601](https://en.wikipedia.org/wiki/ISO_8601) format `YYYY-MM-DD'T'hh:mm:ss.ffffffZ`."
    },
    "team": {
      "type": "string",
      "description": "Team name"
    },
    "itemTypes": {
      "type": "object",
      "description": "Types of virtual object used in this mission",
      "required": [
        "id",
        "name",
        "properties"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Item type identifier"
        },
        "slug": {
          "type": "string",
          "description": "User-friendly and URL-valid name of the type. [Learn more about the slug concept](https://en.wikipedia.org/wiki/Clean_URL#Slug)"
        },
        "name": {
          "type": "string",
          "description": "Item type name"
        },
        "description": {
          "type": "string",
          "description": "Item type description"
        },
        "url": {
          "type": "string",
          "description": "URL of a web page containing detailed information on this type"
        },
        "kind": {
          "type": "string",
          "description": "Object kind (physical body, phenomenon such as rain or fog etc.). In the current version of Roborace Metaverse this field will always contain the value `physical_body`"
        },
        "properties": {
          "type": "object",
          "description": "Object properties",
          "properties": {
            "role": {
              "type": "object",
              "description": "Object's role in the game",
              "properties": {
                "value": {
                  "type": "string",
                  "description": "One of obstacle, collectable, etc (the list of possible values may vary from mission to mission)"
                },
                "points": {
                  "type": "number",
                  "description": "Score points (positive value means reward; negative value means penalty). If not specified, then a contact with such an object does not affect team/car score"
                }
              },
              "required": [
                "value"
              ]
            },
            "dimensions": {
              "type": "object",
              "description": "Physical dimensions (if applicable)",
              "properties": {
                "length": {
                  "$ref": "./Range.v1.json"
                },
                "width": {
                  "$ref": "./Range.v1.json"
                },
                "height": {
                  "$ref": "./Range.v1.json"
                }
              },
              "required": [
                "length"
              ]
            },
            "dynamic": {
              "type": "object",
              "description": "Dynamic characteristics (if applicable)",
              "properties": {
                "velocity": {
                  "$ref": "./Range.v1.json"
                },
                "acceleration": {
                  "$ref": "./Range.v1.json"
                }
              }
            }
          }
        }
      }
    },
    "events": {
      "type": "array",
      "description": "List of Roborace events where this mission is intended to be fulfilled",
      "items": {
        "type": "object",
        "properties": {
          "slug": {
            "type": "string",
            "description": "User-friendly and URL-valid name of the event. [Learn more about the slug concept](https://en.wikipedia.org/wiki/Clean_URL#Slug)"
          },
          "name": {
            "type": "string",
            "description": "Event name"
          },
          "description": {
            "type": "string",
            "description": "Event description"
          },
          "arrangements": {
            "type": "array",
            "description": "List of arrangements for the event. Each arrangement has its own map which is provided in a separate file (see [Map](./Map.v1.json))",
            "items": {
              "type": "object",
              "properties": {
                "slug": {
                  "type": "string",
                  "description": "User-friendly and URL-valid name of the arrangement. [Learn more about the slug concept](https://en.wikipedia.org/wiki/Clean_URL#Slug)"
                },
                "name": {
                  "type": "string",
                  "description": "Arrangement name"
                },
                "description": {
                  "type": "string",
                  "description": "Arrangement description"
                },
                "venue": {
                  "type": "object",
                  "description": "Venue of the arrangement",
                  "properties": {
                    "slug": {
                      "type": "string",
                      "description": "User-friendly and URL-valid name of the venue. [Learn more about the slug concept](https://en.wikipedia.org/wiki/Clean_URL#Slug)"
                    },
                    "name": {
                      "type": "string",
                      "description": "Venue name"
                    },
                    "description": {
                      "type": "string",
                      "description": "Venue description"
                    },
                    "address": {
                      "type": "string",
                      "description": "Venue address"
                    },
                    "position": {
                      "type": "array",
                      "description": "Venue geoposition (latitude, longitude). Positive latitude corresponds to Northern Hemisphere, positive longitude corresponds to Eastern Hemisphere",
                      "items": {
                        "type": "number"
                      }
                    }
                  },
                  "required": [
                    "name",
                    "address"
                  ]
                }
              }
            }
          }
        },
        "required": [
          "name"
        ]
      }
    }
  },
  "required": [
    "slug",
    "version",
    "schema",
    "name",
    "created",
    "team",
    "itemTypes",
    "events"
  ]
}